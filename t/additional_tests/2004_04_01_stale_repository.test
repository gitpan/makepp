open my $x, '>x';

sub reptest {
  makepp @_;
  print $x "-\n";
  -f and print $x $_ . (stat _)[7] . "\n" for qw'a b c dir/d';
}

reptest '-Rrep';
unlink 'rep/a';
reptest qw(--dont-read=rep1/a --dont-read=rep1/dir -Rrep1 -Rrep);
unlink 'rep/c';
reptest '-Rrep';
reptest;

close $x;
